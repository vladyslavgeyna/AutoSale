@model AutoSale.Domain.ViewModels.Account.IndexViewModel

@{
    ViewData["Title"] = "Profile";
}

<main  class="main main-user-profile">
    <div class="container container-user-profile">
        <div class="title-block mb-4 pb-2">
            <h1 class="m-0">Your profile</h1>
            <div class="user-data-wrapper p-2 mt-4 flex-column flex-lg-row align-items-lg-center d-flex  gap-2 gap-lg-5 me-lg-5">
                <div class="user-data-wrapper-content d-flex flex-column flex-md-row gap-3">
                    <div style="width: 150px; height: 150px; margin: 0 auto" class="user-data-image-wrapper">
                        @if (Model.UserImageName is not null)
                        {
                            <img alt="Avatar" class="w-100 h-100" style="border-radius: 50%"  src="~/images/@Model.UserImageName">
                        }
                        else
                        {
                            <img alt="Avatar" class="w-100" src="~/images/site/default_avatar.svg">
                        }
                    </div>
                    <div class="user-data">
                        <table class="table mb-1 w-100">
                            <tbody >
                            <tr>
                                <th scope="row">Name:</th>
                                <td class="ps-md-5 ps-0">@Model.Name</td>
                            </tr>
                            <tr>
                                <th scope="row">Surname:</th>
                                <td class="ps-md-5 ps-0">@Model.Surname</td>
                            </tr>
                            <tr>
                                <th scope="row">Last name:</th>
                                <td class="ps-md-5 ps-0">@Model.LastName</td>
                            </tr>
                            <tr>
                                <th scope="row">Email:</th>
                                <td class="ps-md-5 ps-0">@Model.Email</td>
                            </tr>
                            <tr>
                                <th scope="row">Phone number:</th>
                                <td class="ps-md-5 ps-0">@Model.PhoneNumber</td>
                            </tr>
                            <tr >
                                <td colspan="2" class="p-0 pt-3" >
                                    <a asp-controller="Account" asp-action="Edit" style="border-radius: 25px" class="link-edit-profile btn btn-success w-100"><i class="fa-solid fa-pen-to-square pe-2 py-1"></i>Edit profile</a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="user-data-links d-flex flex-column gap-2 ms-xl-5 mt-lg-0 mt-4">
                    <a asp-controller="CarAd" asp-action="MyAds" class="btn primary-color-bg primary-color-hover px-4 "><i class="fa-solid fa-pager pe-2 "></i>My ads</a>
                    <a asp-controller="FavoriteAd" asp-action="Index" class="btn primary-color-bg primary-color-hover px-4 "><i class="fa-solid fa-heart pe-2 "></i>Favorite</a>
                    <a asp-controller="CarComparison" asp-action="Index" class="btn primary-color-bg primary-color-hover px-4"><i class="fa-solid fa-scale-balanced pe-2 "></i>Comparison</a>
                    <a asp-controller="UserReview" asp-action="View" asp-route-id="@Model.UserId" class="btn primary-color-bg primary-color-hover px-4"><i class="fa-regular fa-comments pe-2"></i>Reviews of me</a>
                </div>
            </div>
        </div>
    </div>
</main>